input:focus {
  border-color: #3b82f6;
  background: #ffffff;
  box-shadow: 0 0 0 3rpx rgba(59, 130, 246, 0.1);
}

input::placeholder {
  color: #94a3b8;
}

.form-group:last-child {
  margin-top: 48rpx;
  display: flex;
  gap: 24rpx;
}

button {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 16rpx;
  transition: all 0.2s ease;
  margin: 0;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

button[formType="submit"] {
  background: #3b82f6;
  color: #ffffff;
}

button[formType="submit"]:active {
  background: #2563eb;
}

button[type="default"] {
  background: #f1f5f9;
  color: #64748b;
  border: none;
}

button[type="default"]:active {
  background: #e2e8f0;
}
